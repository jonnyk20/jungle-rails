<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
    <div class="col-md-12">

    <h3> Reviews </h3>

    
        <table class="table table-bordered">
          <thead>
            <th>Rating</th>
            <th>Reviewer</th>
            <th>Review</th>
            <th></th>
          </thead>
          <tbody>
            <%= render @reviews %>
          </tbody>
        </table>


      <% if current_user %>
        <%= form_for [@product, @review] do |f| %>
          <%=f.label :rating %>
          <%= f.select(:rating, [1, 2, 3, 4, 5], {selected: 3}) %>
          <%=f.label :description %>
          <%=f.text_area :description %>
          <%= f.submit "Submit" %>
        <% end %>
      <% else %>
        <%= link_to 'Login', '/login' %> or <%= link_to 'Signup', '/signup' %> to leave a review
      <% end %>


      </div>
    </div>





  </article>
</section>
